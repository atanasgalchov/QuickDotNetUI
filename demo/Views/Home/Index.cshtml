@using AgileDotNetHtml;
@using AgileDotNetHtml.HtmlAttributes;
@using AgileDotNetHtml.Interfaces;
@using QuickDotNetUI.Html
@using QuickDotNetUI.Models
@using QiuckDotNetUIDemo.Models
@model EmployeeViewModel
@{
    ViewData["Title"] = "Index";
}

@Html.Div(new HtmlAttribute[] { new Class("right_col") },
    Html.Div(
        Html.Div(new HtmlAttribute[] { new Class("g-title") },
            Html.Div(new HtmlAttribute[] { new Class("title_left") }, Html.H3(ViewData["Title"].ToString()))
        ),
        Html.Div(new Class("clearfix")),
            Html.Div(new HtmlAttribute[] { new Class("x-panel") },
                Html.Div(new Class("x_title")),
                Html.Div(new Class("clearfix")),
                Html.Div(new HtmlAttribute[] { new Class("x_content") },
                    Html.Div("Wellcome :)")
                 )
            )
    )
)


@Html.FormFor(x => x, new HtmlFormOptions()
{
    Action = Url.Action("Save", "Empployee"),
    FormAttributes = new IHtmlAttribute[] { new Class("form-vertical") },
    FormGroupAttributes = new HtmlAttribute[] { new Class("form-group") },
    LabelAttributes = new HtmlAttribute[] { new Class("control-label") },
    InputAttributes = new HtmlAttribute[] { new Class("form-control") },
    SubmitButtonAttributes = new HtmlAttribute[] { new Class("btn") },
    ResetButtonAttributes = new HtmlAttribute[] { new Class("btn btn btn-danger") },
    FormContentAttributes = new HtmlAttribute[] { new Class("form-content") },
    FormFooterAttributes = new HtmlAttributesCollection(new Class("form-footer")),
})

<form>
